<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/colorPrimary">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <LinearLayout
            android:id="@+id/consigned_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignmentCustomer"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:textColor="@color/text_white">

        </LinearLayout>

        <TextView
            android:id="@+id/consignmentCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/Customer"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consignmentTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/consigned_items"
            android:layout_centerHorizontal="true"
            android:text="orderTotal"
            android:textColor="@color/text_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/consignmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignmentTotal"
            android:layout_centerHorizontal="true"
            android:text="@string/date"
            android:textColor="@color/text_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/consignationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/consignmentDate"
            android:layout_centerHorizontal="true"
            android:text="@string/status"
            android:textColor="@color/text_white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/consignmentSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/consignationStatus"
            android:layout_centerHorizontal="true"
            android:text="@string/seller"
            android:textColor="@color/text_white"
            android:textSize="20sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>